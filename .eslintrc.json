{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["standard", "prettier", "prettier/babel"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": "off",
    "indent": ["warn", 2],
    "quotes": ["warn", "double"],
    "no-console": "warn",
    "space-before-function-paren": "off"
  }
}
